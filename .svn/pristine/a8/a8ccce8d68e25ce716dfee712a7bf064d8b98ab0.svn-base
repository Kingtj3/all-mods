using ProtoBuf;
using VRage.Utils;
using Vsi.Network;

namespace Vsi.AutoMiner
{

    [ProtoContract]
    public class DrillStateChangedMessage : EntityMessage<DrillStateChangedMessage>
    {
        public static readonly int ID = (int)MyStringHash.GetOrCompute("VSI.AutominerDrillStateChanged");

        [ProtoMember(1)]
        public override long EntityId { get; protected set; }

        [ProtoMember(2)]
        public AutoMinerDrill.DrillState DrillState;

        [ProtoMember(3)]
        public string LastRetrievedOre;

        public DrillStateChangedMessage(long entityId, AutoMinerDrill.DrillState drillState, string lastRetrievedOre)
            : base(entityId)
        {
            DrillState = drillState;
            LastRetrievedOre = lastRetrievedOre;
        }

        public override int GetMessageId()
        {
            return ID;
        }

        private DrillStateChangedMessage()
        {}
    }

}